    "recouvrement",
    "recouv_2",
    "strate",
    "id_nomenclature_obs_technique",
    "id_nomenclature_determination_method",
    "comments"
  ],
  "display_list": [
    "cd_nom",
    "strate",
    "abondance",
    "abondance_niv2",
    "recouvrement",
    "sociabilite",
    "vitalite"
  ],
  "sorts": [
    {"prop": "strate", "dir": "asc"}
  ],
  "keep": [
    "id_nomenclature_obs_technique",
    "id_nomenclature_determination_method",
    "determiner",
    "strate",
    "visit_time"
  ],
  "specific": {
    "determiner":{
      "type_widget": "datalist",
      "attribut_label": "Déterminateur",
      "api": "users/menu/__MODULE.ID_LIST_OBSERVER",
      "application": "GeoNature",
      "keyValue": "id_role",
      "keyLabel": "nom_complet",
      "type_util": "user",
      "multiple": false,
      "required": false
    },
    "cd_nom": {
      "type_widget": "taxonomy",
      "attribut_label": "Espèce observée",
      "multiple": false,
      "id_list": "__MODULE.ID_LIST_TAXONOMY",
      "application": "TaxHub",
      "required": true,
      "type_util": "taxonomy"
    },
    "recouvrement": {
      "type_widget": "number",
      "attribut_label": "Pourcentage de recouvrement",
      "min": 0,
      "max": 100,
      "required": true
    },
    "abondance": {
      "type_widget": "nomenclature",
      "attribut_label": "Abondance/dominance",
      "code_nomenclature_type": "BRAUNBLANQABDOM",
      "required": true,
      "type_util": "nomenclature"
    },
    "abondance_niv2":{
      "attribut_label": "Gestion",
      "definition": "Précision pour le niveau 2 : 2m = > 100 individus / recouv < 5% | 2a = nb individus quelconque / recouv 5-15% | 2b = nb individus quelconque / recouv 15-25%",
      "type_widget": "select",
      "values": [
        "2m",
        "2a",
        "2b"
      ],
      "required": "({value}) => value.recouv_herb =='2'",
      "hidden": "({value}) => value.recouv_herb != '2'"
    },
    "strate": {
      "type_widget": "nomenclature",
      "attribut_label": "Strate de l'espèce",
      "code_nomenclature_type": "RP_STRATE",
      "required": true,
      "type_util": "nomenclature"
    },
    "sociabilite":{
      "type_widget": "nomenclature",
      "attribut_label": "Sociabilité",
      "code_nomenclature_type": "SOCIAB",
      "required": false,
      "type_util": "nomenclature"
    },
    "vitalite":{
      "type_widget": "nomenclature",
      "attribut_label": "Vitalité",
      "code_nomenclature_type": "BRAUNPAVVIT",
      "required": false,
      "type_util": "nomenclature"
    },
    "id_nomenclature_obs_technique": {
      "type_widget": "datalist",
      "attribut_label": "Technique d'observation",
      "api": "nomenclatures/nomenclature/METH_OBS",
      "application": "GeoNature",
      "keyValue": "id_nomenclature",
      "keyLabel": "label_fr",
      "data_path": "values",
      "type_util": "nomenclature",
      "required": true,
      "hidden" : true,
      "default": {
        "cd_nomenclature": "0"
      },
      "filters":{"cd_nomenclature": ["0", "2","18", "17"]}
    },
    "id_nomenclature_determination_method": {
      "type_widget": "datalist",
      "attribut_label": "Méthode de détermination",
      "api": "nomenclatures/nomenclature/METH_DETERMIN",
      "application": "GeoNature",
      "keyValue": "id_nomenclature",
      "keyLabel": "label_fr",
      "data_path": "values",
      "type_util": "nomenclature",
      "required": true,
      "default": {
        "cd_nomenclature": "18"
      },
      "filters":{"cd_nomenclature": ["18", "21", "20", "22", "11", "12", "2"]}
    }
  }
}
