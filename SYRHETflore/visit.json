{
  "genre":"M",
  "label": "relevé phytosociologique",
  "label_list": "relevés phytosociologiques",
  "sorts": [
    {"prop": "visit_date_min", "dir": "desc"}
  ],
  "display_properties": [
    "observers",
    "visit_date_min",
    "habitat_associe",
    "type_aire",
    "aire",
    "rayon",
    "forme_areale",
    "recouv_arbore",
    "recouv_arbust_1",
    "recouv_arbust_2",
    "recouv_herb",
    "comments"
  ],
  "display_list": [
    "visit_date_min",
    "observers",
    "type_aire",
    "nb_observations"
  ],
  "keep": [
    "observers",  
    "habitat_associe",  
    "aire",
    "rayon"
  ],
  "specific": {
    "visit_date_min":{
      "attribut_label": "Date de début du passage",
      "required": true
    },
    "visit_date_max":{
      "required": false  ,
      "hidden": true
    },
    "habitat_associe": {
      "type_widget": "datalist",
      "attribut_label": "Habitat/Syntaxon",
      "description": "Code EUNIS habitat naturel ou du syntaxon",
      "api": "habref/habitats/autocomplete",
      "application": "GeoNature",
      "keyValue": "cd_hab",
      "keyLabel": "search_name",
      "type_util": "habitat",
      "params": {
        "cd_typo": 7,
        "limit": 5000,
        "search_name": ""
      },
      "hidden": false,
      "required": false
    },
    "type_aire":{
      "attribut_label": "Type d'aire de relevé",
      "type_widget": "nomenclature",
      "type_util": "nomenclature",
      "code_nomenclature_type": "RP_AIRE",
      "value": {
        "code_nomenclature_type": "RP_AIRE",
        "cd_nomenclature": "Cer"
      },
      "required": true,
      "hidden": false
    },
    "aire":{
      "type_widget": "number",
      "attribut_label": "Surface en m²",
      "min" : 1,
      "required":  "({value}) => value.type_aire != 'Cer'",
      "hidden": "({value}) => value.type_aire == 'Cer'"
    },
    "rayon":{
      "type_widget": "number",
      "attribut_label": "Surface en m²",
      "min" : 1,
      "value": 15,
      "required":  "({value}) => value.type_aire == 'Cer'",
      "hidden": "({value}) => value.type_aire != 'Cer'"
    },
    "forme_areale":{
      "type_widget": "text",
      "attribut_label": "Forme aréale",
      "required": false
    },
    "recouv_arbore":{
      "type_widget": "number",
      "attribut_label": "Recouvrement trate arborée",
      "min" : 1,
      "required": false
    },
    "recouv_arbust_1":{
      "type_widget": "number",
      "attribut_label": "Recouvrement trate arbustive haute",
      "min" : 1,
      "required": false
    },
    "recouv_arbust_2":{
      "type_widget": "number",
      "attribut_label": "Recouvrement trate arbustive basse",
      "min" : 1,
      "required": false
    },
    "recouv_herb":{
      "type_widget": "number",
      "attribut_label": "Recouvrement trate arbustive herbacée",
      "min" : 1,
      "required": false
    },
    "id_dataset":{
      "hidden": true
    }
  }
}
