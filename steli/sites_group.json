{
  "genre":"M",
  "label": "Site suivi",
  "label_list": "Site suivi",
  "map_label_field_name": "base_site_name",
  "b_draw_sites_group": false,
  "sorts": [
    {"prop": "sites_group_name"}
  ],
  "export_pdf": [
    {
      "template": "fiche_aire.html",
      "label": "Export PDF"
    }
  ],
  "display_properties": [
    "sites_group_code",
    "sites_group_name",
    "id_dataset",
    "id_resp",
    "commune",
    "annee_debut",
    "annee_fin",
    "sentinelle_climat"
  ],
  "display_list": [
    "commune",
    "sites_group_name",
    "nb_sites"
  ],
  "specific": {
    "id_dataset": {
      "type_widget": "datalist",
      "attribut_label": "Jeu de données",
      "type_util": "dataset",
      "api": "meta/datasets",
      "application": "GeoNature",
      "keyValue": "id_dataset",
      "keyLabel": "dataset_name",
      "params": {
        "orderby": "dataset_shortname",
        "module_code": "__MODULE.MODULE_CODE"
      },
      "required": true,
      "hidden": false
    },
    "annee_debut": {
      "type_widget": "number",
      "attribut_label": "Année de lancement du suivi",
      "min" : 1993,
      "value": 2024,
      "required": true
    },
    "annee_fin": {
      "type_widget": "number",
      "attribut_label": "Année d'arrêt du suivi",
      "min" : 1993,
      "required": false
    },
    "sentinelle_climat":{
      "type_widget": "select",
      "required": true,
      "attribut_label": "Programme Sentinelle du Climat",
      "values": ["Oui", "Non"],
      "value": "Non",
      "hidden":false
    },
    "commune":{
      "type_widget": "text",
      "attribut_label": "Commune"
    },
    "id_resp": {
      "type_widget": "datalist",
      "attribut_label": "Responsable STELI du site",
      "api": "users/menu/__MODULE.ID_LIST_OBSERVER",
      "application": "GeoNature",
      "keyValue": "id_role",
      "keyLabel": "nom_complet",
      "type_util": "user",
      "multiple": false,
      "required": true,
      "definition": "Personne responsable du suivi STELI sur le site CEN" 
    },
    "sites_group_name":{
      "hidden":false,
      "required":false
    },
    "sites_group_description":{
      "hidden": true
    },
    "nb_sites": {
      "attribut_label": "Nb. transects",
      "hidden": false
    },
    "nb_visits": {
      "attribut_label": "Nb. passages"
    }
  }
}
